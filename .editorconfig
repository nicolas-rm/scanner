# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = crlf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = off
trim_trailing_whitespace = false

[*.ts]
charset = utf-8
end_of_line = crlf
indent_size = 4
indent_style = space
insert_final_newline = true
quote_type = single
trim_trailing_whitespace = false
multiline_quote_style = single

[*.md]
max_line_length = off
trim_trailing_whitespace = false
